.scroll-view_1{
  height: 50rpx;margin: 20rpx 0 0 0;
}
.scroll-view_1 view{
  display: inline;margin: 0 5%;
  font-size: 28rpx;font-weight: 600;
}
.class{
  width: 100%;display: flex;align-items: center;
  margin: 20rpx auto 0 auto;
  font-size: 28rpx;font-weight: 600;
}
.class view{
  margin: 0 4%;
}
.scroll-view_select{
  padding: 1% 2%;
  background: #2b343b;
  color: #fff;
  justify-content: center;
  /* border-radius: 5px;  */
}
.line{
  width: 100%;height: 5rpx;
  background: #f9f9f9;
  margin: 2% 0 5% 0;
}

.video{
  width: 92%;height: 180rpx;
  margin: 3% auto;display: flex;
  align-items: center;justify-content: space-between
}
.video>image{
  height: 90%;width: 32%;
  border-radius: 10rpx;
}
.video>view{
  width: 63%;
}
.video>view>view:first-of-type{
  font-size: 28rpx;font-weight: 600;
}
.video-cotent{
  font-size: 26rpx;display: flex;
  align-items: center;margin: 5% 0;
}
.video-cotent view{
  margin: 0 4% 0 0;color: #6e7277;
}
.video-cotent image{
  width: 30rpx;height: 30rpx;
}
.video-cotent view:last-of-type{
  margin: 0 0 0 6%;
}
.video>view>view:last-of-type{
  font-size: 24rpx;color: rgb(230, 69, 69);
  display: flex;align-items: center;
}
.video>view>view:last-of-type view{
  margin: 0 20rpx 0 0;
}
.video-state-1{
  color: rgb(230, 69, 69);
}
.video-state-2{
  color: rgb(31, 192, 31);
}
.video-price{
  display: flex;align-items: center;
}
.video-price view{
  color: #4a4d52;
  margin: 0 20rpx 0 0;
}
.video-price>view:last-of-type{
  width: 100rpx;height: 40rpx;
  color: rgb(231, 51, 51);
  border: solid 1rpx rgb(231, 51, 51);
  display: flex;align-items: center;
  justify-content: center;
  border-radius: 20rpx; 
}
.tips{
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  margin: 15% auto 0 auto;
}
.comment{
  margin: 0 0 0 20%;
  color: #2b343b;
}