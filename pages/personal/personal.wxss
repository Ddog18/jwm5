/* pages/personal/personal.wxss */

.title{
  width: 100%;height: 230rpx;
  /* background: #33384a; */
  position: relative;
  display: flex;align-items: center;
  

}
.title .image{
  z-index: 9;
  width: 130rpx;height: 130rpx;
  border-radius:50%;
  margin: 0 5% 0 7%;
  overflow:hidden;
}
.title view{
  margin: 10% 0;
}
.title view>view:first-of-type{
  color: #2b333a;font-size: 32rpx;
  font-weight: 600;
}
.title view>view:last-of-type{
  color: #767a81;font-size: 25rpx;
  font-weight: 600;
}
.achievement{
  width: 100%;
  margin: 0 auto;display: flex;
  justify-content: space-between;
  text-align: center;
}
.achievement>view{
  width: 31%;
}
.achievement>view>view:first-of-type{
  margin: 10rpx 0;letter-spacing:2rpx;
  font-size: 35rpx;font-weight: 600;
}
.achievement>view>view:last-of-type{
  margin: 0 0 10rpx 0;letter-spacing:2rpx;
   font-size: 25rpx;color:#767a81; 
}
.achievement-style{
  border-left: solid 1.5px #f2f2f2;
  border-right: solid 1.5px #f2f2f2;
}

.color{
  width: 100%;height: 25rpx;
  background: #f9fafc;
  margin: 4% 0;
}

.function{
  width: 87%;height: 100rpx;
  margin: 0 auto;display: flex;
  align-items: center;justify-content: space-between;
  font-size: 28rpx;letter-spacing:2rpx;
  border-bottom: solid 0.5rpx #f2f2f2; 
  color: #36383a;
}
.function image{
  width: 40rpx;height: 40rpx;
}
.login-flex{
display:flex;
flex-direction: row;
}
